# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[control]
indent_style = space
indent_size = 2

[changelog]
ignore = true
indent_size = 2

[.gitmodules]
ignore = true

[.git*]
ignore = true
indent_size = 2
